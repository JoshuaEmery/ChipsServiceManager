@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel register-panel">
            <div class="panel-body register-panel-body">
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]"
                      class="register-form" method="post">
                    <h4>Create a new account.</h4>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <img class="account-logo" src="~/images/ChipsLogo_ColorFullRaw.png" />
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="Input.FirstName" placeholder="First Name" class="form-control" />
                            <label for="Input.FirstName" class="glyphicon glyphicon-user" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="Input.LastName" placeholder="Last Name" class="form-control" />
                            <label for="Input.LastName" class="glyphicon glyphicon-user" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="Input.Email" placeholder="Email" class="form-control" />
                            <label for="Input.Email" class="glyphicon glyphicon-envelope" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="Input.Phone" placeholder="999-999-9999" pattern="\d{3}-?\d{3}-?\d{4}" onkeyup="mask(this, phone);" onblur="mask(this, phone)" class="form-control" />
                            <label for="Input.Phone" class="glyphicon glyphicon-phone" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="Input.UserName" placeholder="User Name" class="form-control" />
                            <label for="Input.UserName" class="glyphicon glyphicon-user" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="Input.Password" placeholder="Password" class="form-control" />
                            <label for="Input.Password" class="glyphicon glyphicon-lock"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                            <label for="Input.Password" class="glyphicon glyphicon-lock" />
                        </div>
                    </div>
                    <button type="submit" class="register-form-submit btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function mask(o, f) {
        setTimeout(function () {
            var v = f(o.value);
            if (v != o.value) {
                o.value = v;
            }
        }, 1);
    }


    function phone(v) {
        var r = v.replace(/\D/g, "");
        if (r.length > 9) {
            r = r.replace(/^(\d\d\d)(\d{3})(\d{0,4}).*/, "$1-$2-$3");
            return r;
        }
        else if (r.length > 5) {
            r = r.replace(/^(\d\d\d)(\d{3})(\d{0,4}).*/, "$1-$2-$3");
        }
        else if (r.length > 2) {
            r = r.replace(/^(\d\d\d)(\d{0,3})/, "$1-$2");
        }
        else {
            r = r.replace(/^(\d*)/, "$1");
        }
        return r;
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
