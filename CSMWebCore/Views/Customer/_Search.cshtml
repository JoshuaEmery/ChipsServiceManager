@model CustomerViewModel
<div>
    <div>
        <div>
            <a asp-controller="Customer" asp-action="Details" asp-route-id="@Model.Id">
                <table class="table-responsive table-striped">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone</th>
                        <th>E-mail</th>
                        <th>Student Id</th>
                        <th>Contact Method</th>
                    </tr>
                    <tr>
                        <td>@Model.FirstName</td>
                        <td>@Model.LastName</td>
                        <td>@Model.Phone</td>
                        <td>@Model.Email</td>
                        <td>@Model.StudentId</td>
                        <td>@Model.ContactPref.ToString()</td>
                    </tr>
                </table>
            </a>
        </div>
    </div>
</div>
