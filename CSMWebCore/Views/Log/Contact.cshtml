@model NewLogContactViewModel
<form asp-action="Contact" method="post">
    <div asp-validation-summary="All"></div>
    <div class="topFormPanel">
        <Table class="col-md-3 table table-bordered table-hover">
            <tr>
                <td>
                    <label asp-for="CustomerFirstName"></label>
                </td>
                     <td><input asp-for="CustomerFirstName" readonly="readonly" /></td>
                
            </tr>
            <tr>
                <td>
                    <label asp-for="CustomerLastName"></label></td>
                    <td><input asp-for="CustomerLastName" readonly="readonly" />
                </td>
            </tr>            
            <tr>
                <td>
                    <label asp-for="CustomerEmail"></label></td>
                    <td><input asp-for="CustomerEmail" readonly="readonly" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="CustomerPhone"></label></td>
                   <td> <input asp-for="CustomerPhone" readonly="readonly" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="TicketNumber"></label></td>
                    <td><input asp-for="TicketNumber" readonly="readonly" />
                </td>
            </tr>
        </Table>        
    </div>
    <div class="col-md-12 bottomFormPanel">
        <div class="row">
            <label asp-for="SelectedEventId" class="col-md-2"></label>
            @Html.DropDownListFor(vm => vm.SelectedEventId, Model.Events, new { @class = "form-control" })
            <span asp-validation-for="SelectedEventId"></span>
        </div>
        <div class="row">
            <label asp-for="TicketStatus" class="col-md-2"></label>
            <select class="col-md-2" asp-for="TicketStatus" asp-items='Html.GetEnumSelectList<TicketStatus>().Where(x => x.Text != TicketStatus.New.ToString())'></select>
            <span asp-validation-for="TicketStatus"></span>
        </div>
        <div class="row">
            <label asp-for="LogNotes" class="col-md-2"></label>
            <textarea asp-for="LogNotes" rows="5" class="col-md-5"></textarea>
            <span asp-validation-for="LogNotes"></span>
        </div>
        <input type="hidden" asp-for="TicketId" />
        <input class="btn btn-group btn-success" type="submit" value="Save Contact" />
    </div>
</form>