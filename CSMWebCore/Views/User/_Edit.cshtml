@model UserEditViewModel
<div>
    <div>
        <div>
            
                <table class="table-responsive table-striped">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone</th>
                        <th>E-mail</th>
                        <th>Roles</th>
                        <th>Active</th>

                    </tr>
                    <tr>
                        <td>@Model.FirstName</td>
                        <td>@Model.LastName</td>
                        <td>@Model.Phone</td>
                        <td>@Model.Email</td>
                        <td>@foreach (var role in Model.CurrentRoles)
                        {
                            @role;
                        }</td>
                        
                    </tr>
                </table>
            
        </div>
    </div>
</div>