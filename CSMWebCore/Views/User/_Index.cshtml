@model ChipsUser

<div>
    <div>
        <div>
            
                <table class="table-responsive table-striped">
                    <tr>
                        <th>User Name</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone</th>
                        <th>E-mail</th>
                        <th>Active</th>


                    </tr>
                    <tr>
                        <td>@Model.UserName</td>
                        <td>@Model.FirstName</td>
                        <td>@Model.LastName</td>
                        <td>@Model.Phone</td>
                        <td>@Model.Email</td>
                        <td>@Model.Active.ToString()</td>


                    </tr>
                </table>
            @if(User.IsInRole("Administrator") || User.IsInRole("Supervisor"))
            {
                <a class="btn btn-primary" asp-controller="User" asp-action="Edit" asp-route-userId="@Model.Id">Modify this account</a>
            }

        </div>
    </div>
</div>