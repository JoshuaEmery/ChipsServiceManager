        </ul>
    </nav>
    <main class="container">
        <partial name="_CookieConsentPartial" />
        @RenderBody()
    </main>
    <footer class="container">
        <hr />
        <p class="text-center">&copy; @DateTime.Now.Year CHIPS</p>
    </footer>
    @await Html.PartialAsync("_BaseScriptsPartial")
    @RenderSection("Scripts", required: false)
</body>
</html>