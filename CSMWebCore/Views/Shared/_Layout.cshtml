<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CHIPS Service Manager</title>
    @await Html.PartialAsync("_BaseStylesPartial")
    <link rel="stylesheet" href="~/css/style.min.css" asp-append-version="true" />
</head>
<body>
    @* Primary Nav Bar *@
    <nav id="primaryNav" class="navbar navbar-dark bg-dark navbar-expand-lg">
        <div class="container d-flex">
            @* Toggler *@
            <button class="navbar-toggler order-0" type="button" data-toggle="collapse" data-target="#mainMenuCollapse" aria-controls="mainMenuCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            @* Brand Link (to Home Page) *@
            <a class="navbar-brand py-0 order-lg-2" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/ChipsLogoColor.png" />
            </a>
            @* Right Nav Menu (User Account) *@
            <div class="d-flex flex-row order-lg-3">
                @await Html.PartialAsync("_AccountOptionsPartial")
            </div>
            @* Left Nav Menu (Report, etc) *@
            <div class="collapse navbar-collapse order-lg-1 d-lg-block" id="mainMenuCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Report" asp-action="Index"><i class="fas fa-clipboard-list"></i> Reports</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="usersDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-id-badge"></i> Manage Users
                        </a>
                        <div class="dropdown-menu" aria-labelledby="usersDropdown">
                            <a class="dropdown-item" asp-controller="User" asp-action="Index">View All Users</a>
                            <a class="dropdown-item" asp-controller="User" asp-action="ActiveUsers">View All Active Users</a>
                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Create New User</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @* Secondary Nav Bar *@
    <nav id="secondaryNav" class="navbar navbar-light bg-light">
        <ul class="container navbar-nav d-flex flex-row px-3">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Ticket" asp-action="Index">
                    <i class="fas fa-ticket-alt"></i> Tickets
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Device" asp-action="Index">
                    <i class="fas fa-laptop"></i> Devices
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Customer" asp-action="Index">
                    <i class="fas fa-users"></i> Customers
                </a>
            </li>
