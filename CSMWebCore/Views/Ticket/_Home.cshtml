@model TicketHomeViewModel
<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
        <a data-toggle="collapse" href=@string.Format($"#collapse{ Model.Ticket.Id}")>
            <table>
                <tr>
                    <td class="panel-body">@Model.Ticket.Id</td>
                    <td class="panel-body">@Model.Ticket.TicketStatus.ToString()</td>
                    <td class="panel-body">@Model.Customer.LastName</td>
                    <td class="panel-body">@Model.Ticket.CheckedIn.ToShortDateString()</td>
                    <td class="panel-body">@Model.Log.Logged.ToShortDateString()</td>
                    <td class="panel-body">@Model.Log.Notes.ToString()</td>
                </tr>
            </table>
        </a>
        </div>
        <div id='@string.Format($"collapse{ Model.Ticket.Id}")' class="panel-collapse collapse">
            @foreach (var log in Model.Logs)
            {
                <table>
                    <tr>
                        <td class="panel-body">@log.ContactMethod.ToString()</td>
                        <td class="panel-body">@log.Logged</td>
                        <td class="panel-body">@log.TicketId</td>
                        <td class="panel-body">@log.UserId</td>
                    </tr>
                    <tr>
                        <td class="panel-body">@log.Notes</td>
                    </tr>
                </table>
            }

        </div>
    </div>
</div>

