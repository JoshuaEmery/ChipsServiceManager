@model TicketViewModel
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h5 style="display:inline-block; margin: 0;">@Model.TicketNumber</h5>
        <span class="align-self-center">@Model.CustomerFName @Model.CustomerLName</span>
        <span>@EnumHelper.GetDisplayName(Model.LogLatestStatus).ToUpper()</span>
    </div>
    <div class="card-body">
        <ul>
            <li>Device: @Model.DeviceMake @Model.DeviceModelNumber</li>
            <li>OS: @Model.DeviceOS</li>
            <li>Backup: @Model.NeedsBackup</li>
        </ul>
        <p>@Html.DisplayNameFor(model => model.LogOpenDate): @Model.LogOpenDate.ToShortDateString()</p>
        <p>@Html.DisplayNameFor(model => model.LogLatestDate): @Model.LogLatestDate.ToShortDateString()</p>
        @if (Model.LogCloseDate.HasValue)
        {
            <p>@Html.DisplayNameFor(model => model.LogCloseDate): @Model.LogCloseDate.Value.ToShortDateString()</p>
        }
        <div class="btn-group">
            <a class="btn btn-sm btn-outline-primary" asp-controller="Log" asp-action="Service" asp-route-ticketId="@Model.Id">Log Service</a>
            <a class="btn btn-sm btn-outline-primary" asp-controller="Log" asp-action="Contact" asp-route-ticketId="@Model.Id">Log Contact</a>
            <a class="btn btn-sm btn-outline-secondary" asp-controller="Customer" asp-action="Details" asp-route-id="@Model.CustomerId">Customer Details</a>
            <a class="btn btn-sm btn-outline-secondary" asp-controller="Device" asp-action="Details" asp-route-deviceId="@Model.DeviceId">Device Details</a>
        </div>
    </div>
</div>

